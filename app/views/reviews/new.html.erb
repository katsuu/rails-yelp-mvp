<span><%= link_to "Return to Gem", restaurant_path(@restaurant), class: "btn btn-primary" %></span>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
  <%= f.submit "Submit Review", class: "btn btn-primary" %>
<% end %>
