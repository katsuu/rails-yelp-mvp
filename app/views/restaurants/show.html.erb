<h1><%= @restaurant.name %></h1><span><%= link_to "Return home", restaurants_path, class: "btn btn-primary" %></span>

<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.category.capitalize %></p>

<h2>Reviews</h2>
<p><%= link_to "Leave a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %></p>
<hr>
<% @reviews.each do |review| %>
  <p><%= review.content %></p>
  <span><%= review.rating %></span>
  <hr>
<% end %>
