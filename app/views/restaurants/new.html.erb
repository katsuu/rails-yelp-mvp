<span><%= link_to "Return Home", restaurants_path, class: "btn btn-primary" %></span>
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
  <%= f.submit "Submit Gem", class: "btn btn-primary" %>
<% end %>
